{
  "name": "bilibili-dark-mode",
  "displayName": "DarkBili - Dark Mode for bilibili.com",
  "version": "0.3.7",
  "description": "Dark mode / night mode for bilibili.com",
  "author": "fzhichao",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build --zip",
    "build:firefox": "plasmo build --zip --target=firefox-mv3"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.13.0",
    "@radix-ui/themes": "^3.1.6",
    "plasmo": "^0.89.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "^4.0.1",
    "@types/chrome": "^0.0.253",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "manifest": {
    "host_permissions": [
      "https://*.bilibili.com/*"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "bilibili-dark-mode@fengzhichao.me"
      }
    }
  }
}
